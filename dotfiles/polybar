[module/powermenu]
type = custom/menu

label-open = ÓÑå power
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/redshift]
type = custom/script
exec = pgrep -x redshift > /dev/null && echo "%{F#d75f00}" || echo "%{F#0087ff}"
label = "%output%ÓâÆ%{F-}"
interval = 10
click-left = pgrep -x redshift && killall redshift || redshift on & sleep 1

label-font = 3

